@model TicketManagement.Web.Models.CreateTicketViewModel

@{
    ViewData["Title"] = "Create Ticket";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Create New Ticket</h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateTicket" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Subject" class="control-label">Subject</label>
                        <input asp-for="Subject" class="form-control" placeholder="Brief description of your issue" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Detailed description of your issue"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Priority" class="control-label">Priority</label>
                        <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<TicketManagement.Data.Models.TicketPriority>()"></select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Category" class="control-label">Category</label>
                        <input asp-for="Category" class="form-control" placeholder="e.g. Technical, Billing, Account" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="SubCategory" class="control-label">Sub-Category</label>
                        <input asp-for="SubCategory" class="form-control" placeholder="e.g. Login Issue, Payment Failed" />
                        <span asp-validation-for="SubCategory" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">Submit Ticket</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 